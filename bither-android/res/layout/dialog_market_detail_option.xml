<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_touchable_foreground"
        android:drawableRight="@drawable/option_icon_share"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/market_share_button"
        android:textColor="@color/dialog_text_color_selector"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22ffffff" />

    <LinearLayout
        android:id="@+id/ll_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_touchable_foreground"
        android:gravity="center_vertical"
        android:minWidth="160dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/market_web_button_prefix"
            android:textColor="@color/dialog_text_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:textColor="@color/dialog_text_color_selector"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22ffffff" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_touchable_foreground"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/close"
        android:textColor="@color/dialog_text_color_selector"
        android:textSize="18sp" />

</LinearLayout>